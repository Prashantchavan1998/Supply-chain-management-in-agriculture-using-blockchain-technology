<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>action.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>action.Registration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPost</servlet-name>
        <servlet-class>action.AddPost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBank</servlet-name>
        <servlet-class>action.AddBank</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddImageDt</servlet-name>
        <servlet-class>visual.AddImageDt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CombineShare</servlet-name>
        <servlet-class>visual.CombineShare</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadShare</servlet-name>
        <servlet-class>visual.UploadShare</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidatePass</servlet-name>
        <servlet-class>visual.ValidatePass</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/Registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPost</servlet-name>
        <url-pattern>/AddPost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBank</servlet-name>
        <url-pattern>/AddBank</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddImageDt</servlet-name>
        <url-pattern>/AddImageDt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CombineShare</servlet-name>
        <url-pattern>/CombineShare</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadShare</servlet-name>
        <url-pattern>/UploadShare</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidatePass</servlet-name>
        <url-pattern>/ValidatePass</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
